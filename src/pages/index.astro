---
import { Hero } from "../components/Hero";
import { ServicesGrid } from "../components/Servicos";
import drenagem from "../../public/drenagem.jpg";
import locacao from "../../public/locação.webp";
import pavimentacao from "../../public/pavimentacao.jpg";
import terraplenagem from "../../public/terraplenagem-servicos.jpg";
import { About } from "../components/About";
import { Footer } from "../components/Footer";
import favicon from "../../public/mapabrasil.png";
import { Why } from "../components/Why";
import { ClientsGrid } from "../components/Clientes";
import { Navbar } from "../components/Navbar";

const servicos = [
  {
    title: "Locação de máquinas",
    img: locacao.src,
    desc: "MAPA CONSTRUTORA possui em sua frota grande variedade de máquinas e equipamentos para locação, tais como, Retro Escavadeira, Pá Carregadeira, Motoniveladora, Escavadeira Hidráulica, Pipa, Caminhão Comboio, entre outros",
  },
  {
    title: "Drenagem",
    img: drenagem.src,
    desc: "A MAPA CONSTRUTORA executa obras de drenagem, fornecendo equipamentos, mão de obra e materiais.",
  },
  {
    title: "Pavimentação",
    img: pavimentacao.src,
    desc: "Realizamos pavimentações em CBUQ, PMF (asfalto à frio), PAVI-S, escória, concreto, entre outros. ",
  },
  {
    title: "Terraplenagem",
    img: terraplenagem.src,
    desc: "A MAPA CONSTRUTORA possui em seu corpo técnico, uma equipe com grande experiência na área de Terraplenagem. Realizamos sempre um serviço de qualidade, respeitando todos os padrões e técnicas necessárias.",
  },
];
---

<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={favicon.src} />
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="3master Tecnologia" />
    <meta name="geo.region" content="BR-ES" />
    <meta name="keywords" content="construtora, locação de máquinas, pavimentação, drenagem, terraplenagem, construção civil" />
    <meta name="description" content="MAPA CONSTRUTORA oferece serviços de pavimentação, drenagem, terraplenagem e locação de máquinas, com qualidade e eficiência." />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content="Mapa Construtora - Excelência em Construção e Locação de Máquinas" />
    <meta property="og:image" content={favicon.src} />
    <meta property="og:description" content="MAPA CONSTRUTORA oferece serviços de pavimentação, drenagem, terraplenagem e locação de máquinas, com qualidade e eficiência." />
    <meta property="og:url" content="https://www.mapa.srv.br" />
    <title>Mapa Construtora - Excelência em Construção e Locação de Máquinas</title>
  </head>
  <body>
    <Navbar client:load />
    <section id="hero" class="w-full">
      <Hero />
    </section>
    <section
      id="services"
      class="w-full h-fit px-[25px] lg:px-[150px] 3xl:px-[300px] lg:pt-[80px] py-[40px]"
    >
      <ServicesGrid client:visible />
    </section>
    <section
      id="about"
      class="w-full h-fit px-[25px] lg:px-[150px] 3xl:px-[300px] lg:py-[40px] py-[40px]"
    >
      <About client:visible />
    </section>
    <section
      id="why"
      class="w-full h-fit px-[25px] lg:px-[150px] 3xl:px-[300px] lg:py-[80px] py-[40px]"
    >
      <Why client:visible />
    </section>

    <section
      id="clientes"
      class="w-full h-fit p-10 px-[25px] lg:px-[100px] 3xl:px-[300px] lg:py-[80px] py-[40px] flex justify-center"
    >
      <ClientsGrid client:visible />
    </section>

    <section class="w-full h-fit" id="map">
      <iframe
        title="Mapa Construtora"
        src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d14964.532828926447!2d-40.385014!3d-20.336115!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xb83eaa07ed3b8f%3A0xf7842a166241f701!2sMapa%20Construtora%20e%20Servi%C3%A7os!5e0!3m2!1sen!2sbr!4v1730821685644!5m2!1sen!2sbr"
        width="100%"
        height="300"
        loading="lazy"></iframe>
    </section>
    <section id="footer" class="w-full h-fit">
      <Footer />
    </section>
  </body>

  <style>
    @import url("https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
    
    html{
      scroll-behavior: smooth;
    }
    body {
      font-family: "Poppins", sans-serif;
      background-color: rgb(250, 250, 250);
      
    }

    #services,
    #about,
    #clientes {
      background-color: #fafafa;

      background-image: linear-gradient(#efefef 1px, transparent 1px),
        linear-gradient(to right, #f1f1f1 1px, rgba(250, 250, 250, 1) 1px);
      background-size: 38px 38px;
    }

    #why {
      background-color: #2aa0d0;
      background-image: linear-gradient(
          #3aa7d5 1.9000000000000001px,
          transparent 1.9000000000000001px
        ),
        linear-gradient(
          to right,
          #3aa7d5 1.9000000000000001px,
          #2aa0d0 1.9000000000000001px
        );
      background-size: 38px 38px;
    }

  </style>
</html>
